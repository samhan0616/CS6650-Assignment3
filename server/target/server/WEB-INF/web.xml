<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>skierServlet</servlet-name>
    <servlet-class>controller.SkierServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>statisticServlet</servlet-name>
    <servlet-class>controller.StatisticServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>skierServlet</servlet-name>
    <url-pattern>/skiers/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>statisticServlet</servlet-name>
    <url-pattern>/statistics</url-pattern>
  </servlet-mapping>

</web-app>
